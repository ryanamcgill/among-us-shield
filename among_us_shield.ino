void setup() {
  Serial.begin(9600);
  randomSeed(analogRead(0));
  tft.reset(); 
  tft.begin(0x9341);
  tft.setRotation(1);
  main_screen();
}


void loop() {
  TSPoint p = ts.getPoint(); 
  
  if (p.z > ts.pressureThreshhold) {
    // A touch is detected
    p.x = map(p.x, TS_MAXX, TS_MINX, 0, 320);
    p.y = map(p.y, TS_MAXY, TS_MINY, 0, 240);
       
    
    pinMode(XM, OUTPUT);
    pinMode(YP, OUTPUT);
    if (p.x > (BUTTON_X1) && p.x < (BUTTON_X1+BUTTON_H) &&
        p.y > (10) && p.y < (80)) {
      // Yes was pressed
      dead_screen(false);
      tft.setTextColor(WHITE);
      tft.setTextSize(2);
      tft.setCursor(70,100);
      tft.print("Ryan");
      //tft.drawChar(90,100,'w',WHITE,0,2);
      delay(DEAD_DELAY);
      main_screen();
    }
    if (p.x > BUTTON_X2 && p.x < (BUTTON_X2+BUTTON_H) &&
        p.y > 10 && p.y < (80)) {
      // No was pressed
      dead_screen(true);
      tft.setTextColor(WHITE);
      tft.setTextSize(2);
      tft.setCursor(70,100);
      tft.print("Ryan");
      delay(DEAD_DELAY);
      main_screen();
    }
      

    delay(10);  
  }
}

